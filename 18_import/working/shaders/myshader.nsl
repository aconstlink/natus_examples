

config myconfig
{
    render_states
    {}

    vertex_shader
    {
        mat4 proj : projection ;
        mat4 view : view ;

        in vec3 pos : position ;
        in vec2 tx : texcoord0 ;

        out vec2 tex0 ;

        shader glsl
        {
            void main()
            {
                out.tex0 = in.tx ;
                gl_Position = proj * view * vec4( in.pos, 1.0 ) ;
            }
        }

        // hlsl not possible at the moment
        shader hlsl
        {}
    }

    pixel_shader
    {
        tex2d some_texture ;

        in vec2 tex0 ;
        out  vec4 color : color ;

        shader glsl
        {
            void main()
            {
                out.color = texture( some_texture, in.tex0 ) ;
                out.color.x = nsl.math.pulse( 0.4, 0.6, in.tex0.x ) ;
            }
        }
    }
}